<header class='navbar navbar-fixed-top'>
  <div class='navbar-inner'>
    <div class='container'>
      <button type='button' class='btn btn-navbar' data-toggle='collapse' data-target='.nav-collapse'>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <%= link_to 'Sample App', root_path, class: 'brand', id: 'logo' %>

      <div class='nav-collapse collapse'>
        <ul class='nav'>
          <li class='<%= "active" if current_page? microposts_path %>'>
            <%= link_to 'Public Stream', microposts_path %>
          </li>
          <li class='<%= "active" if current_page? users_path %>'>
            <%= link_to 'All Users', users_path %>
          </li>
        </ul>

        <% if signed_in? %>
          <nav>
            <ul class='nav pull-right'>
              <li class='dropdown'>
                <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
                  <%= gravatar_for current_user, size: 18, class: 'navbar__gravatar' %>
                  <%= current_user.name %>
                  <b class='caret'></b>
                <% end %>
                <ul class='dropdown-menu'>
                  <li>
                    <%= link_to 'Profile', current_user %>
                  </li>
                  <li>
                    <%= link_to 'Settings', edit_user_path(current_user) %>
                  </li>
                  <li class='divider'></li>
                  <li>
                    <%= link_to 'Sign out', signout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            </ul>
          </nav>

        <% else %>

          <div class='pull-right'>
            <%= link_to signup_path, class: 'btn' do %>
              <strong>Sign up</strong>
            <% end %>

            <%= link_to 'Sign in', signin_path, class: 'btn' %>
          </div>

        <% end %>

      </div>

    </div>
  </div>
</header>
