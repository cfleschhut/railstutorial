<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span3">

    <%= render 'shared/user_info', user: @user %>

    <% if current_user? @user %>
      <p>
        <%= link_to 'Edit Settings', edit_user_path(current_user), class: 'btn btn-small btn-block' %>
      </p>
    <% end %>

  </aside>

  <div class="span9">

    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>

  </div>
</div>
