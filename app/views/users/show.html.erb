<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">

    <figure class="user-avatar">
      <div class="user-avatar__image">
        <%= gravatar_for @user, size: 220 %>
      </div>
      <figcaption class="user-avatar__name">
        <%= @user.name %>
      </figcaption>
    </figure>

  </aside>

  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
