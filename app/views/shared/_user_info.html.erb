<section>
  <div class='user-avatar'>
    <%= gravatar_for user, size: 220 %>
  </div>

  <dl>
    <dt>
      <%= link_to user.name, user %>
    </dt>
    <dd>
      <%= pluralize(user.microposts.count, 'micropost') %>
    </dd>
  </dl>

  <% if current_user?(user) && !current_page?(root_path) %>
    <p>
      <%= link_to 'Edit Settings', edit_user_path(current_user), class: 'btn btn-small btn-block' %>
    </p>
  <% end %>
</section>
