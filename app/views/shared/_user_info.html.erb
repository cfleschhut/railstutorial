<section>
  <div class='user-avatar'>
    <%= gravatar_for user, size: 270 %>
  </div>

  <h4 class='user-name'>
    <%= user.name %>
  </h4>

  <% if current_user?(user) && !current_page?(root_path) %>
    <p>
      <%= link_to 'Edit Settings', edit_user_path(current_user), class: 'btn btn-small btn-block' %>
    </p>
  <% end %>
</section>
